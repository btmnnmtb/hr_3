<Window x:Class="hr_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hr_3"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>



        </Grid.RowDefinitions>

        <DataGrid x:Name ="table_1"/>
        <DataGrid x:Name="table_2" AutoGenerateColumns="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id_table_22}" Header="ID"/>
                <DataGridTextColumn Binding="{Binding car_god_proizvod}" Header="GOD"/>
                <DataGridTextColumn Binding="{Binding table_111.car_name}" Header="NAme"/>


            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="table_3" Grid.Row="3" />

    </Grid>
</Window>
